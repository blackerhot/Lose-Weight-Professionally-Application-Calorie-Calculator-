<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#E9EFFE"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/unitT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:text="คิดเป็น"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/calT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/unitT1"
            android:layout_alignBottom="@+id/unitT1"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/textView10"
            android:layout_toStartOf="@+id/textView10"
            android:text="0"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/unitT1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:text="kCal"
            android:textSize="23dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/butDel1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/buttonsert1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"

                android:drawable="@drawable/oval"
                android:padding="16dp"
                android:text="เพิ่ม" />
        </RelativeLayout>

        <EditText
            android:id="@+id/unitText1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="เวลา"
            android:inputType="numberDecimal"
            android:layout_above="@+id/relativeLayout"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/butDel1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/unitText1"
            android:layout_toStartOf="@+id/unitText1" />

        <Button
            android:id="@+id/butAdd1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:layout_below="@+id/space"
            android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="นาที"
            android:textSize="19dp"
            android:layout_alignBaseline="@+id/butAdd1"
            android:layout_alignBottom="@+id/butAdd1"
            android:layout_toLeftOf="@+id/butAdd1"
            android:layout_toStartOf="@+id/butAdd1" />

    </RelativeLayout>

</LinearLayout>